{% schema %}
{
  "name": "Shoppable Lookpage",
  "settings": [],
  "blocks": [
    {
      "type": "image_block",
      "name": "Image Block",
      "settings": [],
      "presets": [
        {
          "name": "Full Width",
          "category": "Image"
        }
      ]
    },
    {
      "type": "product_block",
      "name": "Product Block",
      "settings": [],
      "presets": [
        {
          "name": "Default",
          "category": "Product"
        }
      ]
    }
  ]
}
{% endschema %}

{% block 'image_block' %}
  <div class="image-block">
    <img src="{{ block.settings.image_url | img_url: 'master' }}" alt="Look Image">
  </div>
{% endblock %}

{% block 'product_block' %}
  <div class="product-block">
    <h2>{{ block.settings.product_title }}</h2>
    <p>{{ block.settings.product_description }}</p>
    <p>Price: {{ block.settings.product_price }}</p>
    <button class="add-to-cart" data-product-id="{{ block.settings.product_id }}">Add to Cart</button>
  </div>
{% endblock %}

